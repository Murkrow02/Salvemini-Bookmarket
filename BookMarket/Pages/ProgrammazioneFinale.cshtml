@page
@model BookMarket.Pages.ProgrammazioneFinaleModel
@{
    ViewData["Title"] = "Programmazione finale";
}

<div style="padding:20px;">
    <h1>Ritiro soldi e libri</h1>
    <p>(In ordine alfabetico)</p>
    <ul>
        @foreach (var user in Model.users)
        {
            <li>
                <span>@user.Cognome @user.Nome</span>
                <span>(@user.Id)</span>
                <span>@user.AppuntamentoFinale.Value.ToString("dd MMMM alle HH:mm")</span>
            </li>
        }
    </ul>
</div>


<style>
    footer {
        display: none;
    }
</style>